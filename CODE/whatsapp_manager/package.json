{
  "name": "whatsapp-session",
  "version": "1.0.0",
  "description": "Servidor de sessão única do WhatsApp para Docker",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "test": "node test_pairing_code.js",
    "test:connection": "node test_pairing_code.js connection",
    "test:pairing": "node test_pairing_code.js pairing",
    "test:status": "node test_pairing_code.js status",
    "test:monitor": "node test_pairing_code.js monitor",
    "test:send": "node test_pairing_code.js send",
    "test:full": "node test_pairing_code.js full",
    "test:pairing-fix": "node test_pairing_fix.js",
    "test:pairing-fix:all": "node test_pairing_fix.js all",
    "test:pairing-fix:error": "node test_pairing_fix.js error",
    "test:pairing-fix:reconnection": "node test_pairing_fix.js reconnection",
    "diagnose": "node diagnose_connection.js",
    "diagnose:test": "node diagnose_connection.js --test-only",
    "session:list": "node clear_session.js list",
    "session:clear": "node clear_session.js clear",
    "session:clear-all": "node clear_session.js clear-all",
    "session:info": "node clear_session.js info",
    "session:backup": "node clear_session.js backup",
    "session:restore": "node clear_session.js restore",
    "setup": "./setup_env.sh"
  },
  "keywords": [
    "whatsapp",
    "api",
    "baileys",
    "docker"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@hapi/boom": "^10.0.1",
    "@supabase/supabase-js": "^2.50.2",
    "@whiskeysockets/baileys": "^6.7.18",
    "amqplib": "^0.10.8",
    "axios": "^1.10.0",
    "baileys": "github:EvolutionAPI/Baileys",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "eventemitter2": "^6.4.9",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "https-proxy-agent": "^7.0.6",
    "jimp": "^0.22.10",
    "jsonwebtoken": "^9.0.2",
    "link-preview-js": "^3.0.5",
    "md5": "^2.3.0",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "pino": "^9.7.0",
    "pino-pretty": "^10.2.3",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.32.6"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  }
}
