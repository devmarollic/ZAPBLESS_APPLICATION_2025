# Configurações do WhatsApp Manager
# Copie este arquivo para .env e configure os valores

# ID da Igreja (obrigatório)
CHURCH_ID=your_church_id_here

# Configurações do Supabase (obrigatório)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Configurações de Proxy (opcional)
# Descomente e configure se precisar usar proxy
# PROXY_HOST=proxy.example.com
# PROXY_PORT=8080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Configurações de Log (opcional)
LOG_LEVEL=info
DEBUG=false

# Configurações de Porta (opcional)
PORT=3000

# Configurações de Timeout (opcional)
CONNECT_TIMEOUT=60000
QR_TIMEOUT=40000
KEEP_ALIVE_INTERVAL=30000

# Configurações de Reconexão (opcional)
MAX_RECONNECT_ATTEMPTS=5
RECONNECT_DELAY=2000

# Configurações de Sessão (opcional)
# Diretório base para armazenar sessões do WhatsApp
SESSION_BASE_DIR=./sessions 